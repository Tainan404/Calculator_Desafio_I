<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_default">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="btn_primary" parent="btn_default">
        <item name="android:backgroundTint">@color/purple_700</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_secondary" parent="btn_default">
        <item name="android:backgroundTint">@color/surface_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>